# Ninja build file for C++ compilation

# Variables
cxx = C:/tools/mingw64/bin/g++.exe
cxxflags = -Wall -Wextra -std=c++17

# Build rule
rule compile
  command = $cxx $cxxflags $in -o $out
  description = Compiling $in

# Run rule
rule run
  command = cmd /c $in
  description = Running $in
  pool = console

# Link/compile rule (for single file projects)
build namespace2.exe: compile namespace2.cpp

# Run the executable
build run: run namespace2.exe

# Default target - build and run
default run
